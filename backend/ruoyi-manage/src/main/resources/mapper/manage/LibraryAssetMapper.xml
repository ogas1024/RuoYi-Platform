<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.LibraryAssetMapper">

    <resultMap id="LibraryAssetResult" type="com.ruoyi.manage.domain.LibraryAsset">
        <result property="id" column="id"/>
        <result property="bookId" column="book_id"/>
        <result property="assetType" column="asset_type"/>
        <result property="format" column="format"/>
        <result property="fileUrl" column="file_url"/>
        <result property="fileSize" column="file_size"/>
        <result property="fileHash" column="file_hash"/>
        <result property="ossObjectKey" column="oss_object_key"/>
        <result property="linkUrl" column="link_url"/>
        <result property="sort" column="sort"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <select id="selectById" parameterType="long" resultMap="LibraryAssetResult">
        select *
        from tb_library_book_asset
        where id = #{id}
    </select>

    <select id="selectByBookId" parameterType="long" resultMap="LibraryAssetResult">
        select *
        from tb_library_book_asset
        where del_flag = '0'
          and book_id = #{bookId}
        order by sort asc, id asc
    </select>

    <insert id="insert" parameterType="com.ruoyi.manage.domain.LibraryAsset" useGeneratedKeys="true" keyProperty="id">
        insert into tb_library_book_asset(book_id, asset_type, format, file_url, file_size, file_hash, oss_object_key,
                                          link_url, sort, create_by, create_time, del_flag)
        values (#{bookId}, #{assetType}, #{format}, #{fileUrl}, #{fileSize}, #{fileHash}, #{ossObjectKey}, #{linkUrl},
                #{sort}, #{createBy}, #{createTime}, '0')
    </insert>

    <delete id="deleteById" parameterType="long">
        delete
        from tb_library_book_asset
        where id = #{id}
    </delete>

    <!-- moved under mapper/manage for consistency -->
</mapper>
