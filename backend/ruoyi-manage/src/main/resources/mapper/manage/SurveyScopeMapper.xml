<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.SurveyScopeMapper">
    <!--
      模块：问卷-可见范围
      说明：
        - 记录问卷面向的用户/部门等可见范围；由上层合并到详情。
    -->

    <resultMap id="ScopeResult" type="com.ruoyi.manage.domain.SurveyScope">
        <result property="id" column="id"/>
        <result property="surveyId" column="survey_id"/>
        <result property="scopeType" column="scope_type"/>
        <result property="refId" column="ref_id"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectBySurveyId" resultMap="ScopeResult">
        select *
        from tb_survey_scope
        where survey_id = #{surveyId}
          and del_flag = '0'
    </select>

    <insert id="insert" parameterType="com.ruoyi.manage.domain.SurveyScope" useGeneratedKeys="true" keyProperty="id">
        insert into tb_survey_scope (survey_id, scope_type, ref_id,
                                     create_by, create_time, update_by, update_time, del_flag)
        values (#{surveyId}, #{scopeType}, #{refId},
                #{createBy}, #{createTime}, #{updateBy}, #{updateTime}, '0')
    </insert>

    <delete id="deleteBySurveyId">
        delete
        from tb_survey_scope
        where survey_id = #{surveyId}
    </delete>

</mapper>
