<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.MajorLeadMapper">

    <resultMap id="MajorLeadResult" type="com.ruoyi.manage.domain.MajorLead">
        <result property="id" column="id"/>
        <result property="majorId" column="major_id"/>
        <result property="userId" column="user_id"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <sql id="baseSelect">select id, major_id, user_id, remark, create_by, create_time, update_by, update_time, del_flag from tb_major_lead</sql>

    <select id="selectById" parameterType="long" resultMap="MajorLeadResult">
        <include refid="baseSelect"/> where id = #{id}
    </select>

    <select id="selectList" parameterType="com.ruoyi.manage.domain.MajorLead" resultMap="MajorLeadResult">
        <include refid="baseSelect"/>
        <where>
            del_flag = '0'
            <if test="majorId != null"> and major_id = #{majorId}</if>
            <if test="userId != null"> and user_id = #{userId}</if>
        </where>
        order by id desc
    </select>

    <insert id="insert" parameterType="com.ruoyi.manage.domain.MajorLead" useGeneratedKeys="true" keyProperty="id">
        insert into tb_major_lead (major_id, user_id, remark, create_by, create_time, del_flag)
        values (#{majorId}, #{userId}, #{remark}, #{createBy}, #{createTime}, '0')
    </insert>

    <delete id="deleteById" parameterType="long">
        delete from tb_major_lead where id = #{id}
    </delete>

    <delete id="deleteByIds">
        delete from tb_major_lead where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">#{id}</foreach>
    </delete>

    <delete id="deleteByMajorAndUser">
        delete from tb_major_lead where major_id = #{majorId} and user_id = #{userId}
    </delete>

</mapper>

