<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.CategoryMapper">
    <!--
      模块：图书类别（示例）
      说明：
        - 名称唯一性由服务层校验；基础 CRUD。
    -->

    <resultMap type="Category" id="CategoryResult">
        <result property="id" column="id"/>
        <result property="categoryName" column="category_name"/>
        <result property="bookCount" column="book_count"/>
    </resultMap>

    <sql id="selectCategoryVo">
        select id, category_name
        from tb_category
    </sql>

    <select id="selectCategoryList" parameterType="Category" resultMap="CategoryResult">
        select c.id,c.category_name,ifnull(count(b.id),0) as book_count from tb_category c left join tb_book b on
        b.category_id= c.id
        <where>
            <if test="categoryName != null  and categoryName != ''">and category_name like concat('%', #{categoryName},
                '%')
            </if>
        </where>
        group by c.id,c.category_name
    </select>

    <select id="selectCategoryById" parameterType="Long" resultMap="CategoryResult">
        <include refid="selectCategoryVo"/>
        where id = #{id}
    </select>
    <select id="selectCategoryByName" parameterType="String" resultMap="CategoryResult">
        <include refid="selectCategoryVo"/>
        where category_name = #{categoryName}
    </select>

    <insert id="insertCategory" parameterType="Category" useGeneratedKeys="true" keyProperty="id">
        insert into tb_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">#{categoryName},</if>
        </trim>
    </insert>

    <update id="updateCategory" parameterType="Category">
        update tb_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryName != null and categoryName != ''">category_name = #{categoryName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCategoryById" parameterType="Long">
        delete
        from tb_category
        where id = #{id}
    </delete>

    <delete id="deleteCategoryByIds" parameterType="String">
        delete from tb_category where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
