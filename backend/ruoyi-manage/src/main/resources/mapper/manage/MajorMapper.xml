<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.MajorMapper">
    <!--
      模块：专业
      说明：
        - 独立维护（不依赖 sys_dept）；名称唯一索引，便于后台维护。
    -->

    <resultMap id="MajorResult" type="com.ruoyi.manage.domain.Major">
        <result property="id" column="id"/>
        <result property="majorName" column="major_name"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <sql id="baseSelect">select id,
                                major_name,
                                status,
                                remark,
                                create_by,
                                create_time,
                                update_by,
                                update_time,
                                del_flag
                         from tb_major</sql>

    <select id="selectMajorList" parameterType="com.ruoyi.manage.domain.Major" resultMap="MajorResult">
        <include refid="baseSelect"/>
        <where>
            del_flag = '0'
            <if test="majorName != null and majorName != ''">and major_name like concat('%', #{majorName}, '%')</if>
            <if test="status != null and status != ''">and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <select id="selectMajorById" parameterType="long" resultMap="MajorResult">
        <include refid="baseSelect"/>
        where id = #{id}
    </select>

    <insert id="insertMajor" parameterType="com.ruoyi.manage.domain.Major" useGeneratedKeys="true" keyProperty="id">
        insert into tb_major (major_name, status, remark, create_by, create_time, del_flag)
        values (#{majorName}, #{status}, #{remark}, #{createBy}, #{createTime}, '0')
    </insert>

    <update id="updateMajor" parameterType="com.ruoyi.manage.domain.Major">
        update tb_major
        <set>
            <if test="majorName != null and majorName != ''">major_name = #{majorName},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteMajorById" parameterType="long">
        delete
        from tb_major
        where id = #{id}
    </delete>

    <delete id="deleteMajorByIds">
        delete from tb_major where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">#{id}</foreach>
    </delete>

</mapper>
