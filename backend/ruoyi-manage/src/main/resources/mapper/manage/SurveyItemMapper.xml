<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.manage.mapper.SurveyItemMapper">
    <!--
      模块：问卷-题目
      说明：
        - 题目按 surveyId 关联；删除用于编辑替换。
    -->

    <resultMap id="ItemResult" type="com.ruoyi.manage.domain.SurveyItem">
        <result property="id" column="id"/>
        <result property="surveyId" column="survey_id"/>
        <result property="title" column="title"/>
        <result property="type" column="type"/>
        <result property="required" column="required"/>
        <result property="sortNo" column="sort_no"/>
        <result property="extJson" column="ext_json"/>
        <result property="delFlag" column="del_flag"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectBySurveyId" resultMap="ItemResult">
        select *
        from tb_survey_item
        where survey_id = #{surveyId}
          and del_flag = '0'
        order by sort_no asc, id asc
    </select>

    <insert id="insert" parameterType="com.ruoyi.manage.domain.SurveyItem" useGeneratedKeys="true" keyProperty="id">
        insert into tb_survey_item (survey_id, title, type, required, sort_no, ext_json,
                                    create_by, create_time, update_by, update_time, del_flag)
        values (#{surveyId}, #{title}, #{type}, #{required}, #{sortNo}, #{extJson},
                #{createBy}, #{createTime}, #{updateBy}, #{updateTime}, '0')
    </insert>

    <delete id="deleteBySurveyId">
        delete
        from tb_survey_item
        where survey_id = #{surveyId}
    </delete>

</mapper>
